    const loadMoreButton = document.getElementById('load-more-reviews');
    const additionalReviews = document.getElementById('additional-reviews');
    
    if (loadMoreButton && additionalReviews) {
      loadMoreButton.addEventListener('click', function() {
        additionalReviews.classList.remove('hidden');
        loadMoreButton.style.display = 'none';
        
        // Smooth scroll to additional reviews
        additionalReviews.scrollIntoView({ 
          behavior: 'smooth', 
          block: 'start' 
        });
      });
    }
  });
</script>