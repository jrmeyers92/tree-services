---
// src/components/Hero.astro
import { Image } from 'astro:assets';
import heroImage from '../assets/hero.jpg';
---

<section class="relative h-[75vh] min-h-[600px] sm:h-[60vh] sm:min-h-[500px] overflow-hidden">
  <div class="relative w-full h-full">
    <Image 
      src={heroImage} 
      alt="Reynolds Tree Service - Professional tree removal and land services"
      class="w-full h-full object-cover object-center"
      width={1920}
      height={1080}
      loading="eager"
    />
    
    <!-- Hero Content Overlay -->
    <div class="absolute inset-0 flex items-center">
      <div class="md:ml-15 md:ml-20">
        <!-- Background blur box -->
        <div class="relative bg-gradient-to-br from-black/70 to-black/40 backdrop-blur-sm rounded-2xl p-10 sm:p-6">
          
          <!-- Content inside the blur box -->
          <div class="text-white">
            <h1 class="text-6xl md:text-5xl sm:text-4xl font-bold mb-4 drop-shadow-[2px_2px_4px_rgba(0,0,0,0.8)]">
              Reynolds Tree Service
            </h1>
            
            <p class="text-xl md:text-lg sm:text-base mb-8 drop-shadow-[1px_1px_3px_rgba(0,0,0,0.8)] font-medium">
              Professional Tree, Demolition & Excavation Services
            </p>
            
            <div class="flex flex-wrap gap-4 mb-10 sm:flex-col sm:items-start sm:gap-3">
              <span class="bg-emerald-800/90 text-white px-4 py-2 rounded-full font-semibold text-sm border-2 border-white/30 drop-shadow-[1px_1px_2px_rgba(0,0,0,0.5)] sm:text-xs sm:px-3 sm:py-1.5 w-fit">
                Tree Services
              </span>
              <span class="bg-emerald-800/90 text-white px-4 py-2 rounded-full font-semibold text-sm border-2 border-white/30 drop-shadow-[1px_1px_2px_rgba(0,0,0,0.5)] sm:text-xs sm:px-3 sm:py-1.5 w-fit">
                Demolition Services
              </span>
              <span class="bg-emerald-800/90 text-white px-4 py-2 rounded-full font-semibold text-sm border-2 border-white/30 drop-shadow-[1px_1px_2px_rgba(0,0,0,0.5)] sm:text-xs sm:px-3 sm:py-1.5 w-fit">
                Excavation Services
              </span>
            </div>

            <div class="flex flex-col gap-4 items-start sm:items-stretch">
              <a href="tel:6362089000" class="bg-yellow-500 text-black px-6 py-4 no-underline rounded-lg font-bold text-lg transition-all duration-300 border-2 border-yellow-400 shadow-[0_4px_8px_rgba(0,0,0,0.3)] hover:bg-yellow-400 hover:-translate-y-0.5 hover:shadow-[0_6px_12px_rgba(0,0,0,0.4)] w-fit sm:w-full sm:text-center sm:text-base sm:px-5 sm:py-3">
                ðŸ“ž (636) 208-9000
              </a>
              <a href="#quote" class="bg-emerald-800 text-white px-8 py-4 no-underline rounded-lg font-bold text-lg transition-all duration-300 border-2 border-emerald-600 shadow-[0_4px_8px_rgba(0,0,0,0.3)] hover:bg-emerald-900 hover:-translate-y-0.5 hover:shadow-[0_6px_12px_rgba(0,0,0,0.4)] w-fit sm:w-full sm:text-center sm:text-base sm:px-5 sm:py-3">
                Get Free Quote
              </a>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>