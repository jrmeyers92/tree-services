      <!-- Services -->
      <div>
        <h4 class="text-lg font-bold mb-4">Our Services</h4>
        <ul class="space-y-2">
          <li><a href="#services" class="text-emerald-100 hover:text-white transition-colors">Tree Removal</a></li>
          <li><a href="#services" class="text-emerald-100 hover:text-white transition-colors">Tree Trimming</a></li>
          <li><a href="#services" class="text-emerald-100 hover:text-white transition-colors">Stump Grinding</a></li>
          <li><a href="#services" class="text-emerald-100 hover:text-white transition-colors">Emergency Tree Service</a></li>
          <li><a href="#services" class="text-emerald-100 hover:text-white transition-colors">Demolition Services</a></li>
          <li><a href="#services" class="text-emerald-100 hover:text-white transition-colors">Excavation Services</a></li>
          <li><a href="#services" class="text-emerald-100 hover:text-white transition-colors">Land Clearing</a></li>
          <li><a href="#services" class="text-emerald-100 hover:text-white transition-colors">Concrete Removal</a></li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-bold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <!-- <li><a href="#home" class="text-emerald-100 hover:text-white transition-colors">Home</a></li> -->
